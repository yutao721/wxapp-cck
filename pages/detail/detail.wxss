
.info {
  background-color: #fff;
  padding: 0 28rpx;
}

.name {
  font-size: 48rpx;
  color: #222;
  line-height: 1.3;
}

.time {
  font-size: 28rpx;
  color: #999;
  padding: 24rpx 0 32rpx 0;
  display: flex;
  align-items: center;
}

.time text {
  margin-right: 20rpx;
}

.desc {
  background: #FFF;
  margin-top: 20rpx;
}


.detail-cont {
  font-size: 28rpx;
  color: #666;
  line-height: 44rpx;
  padding: 30rpx;
  overflow: hidden;
}

.detail-cont image {
  display: block;
  max-width: 100%;
  height: auto;
}
