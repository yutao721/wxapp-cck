page {
  background: #FFF;
}

.block {
  width: 694rpx;
  height: 802rpx;
  background: #FFFFFF;
  box-shadow: 0 4rpx 16rpx 0 rgba(82, 82, 82, 0.08);
  border-radius: 16px;
  padding: 40rpx;
  box-sizing: border-box;
  margin: 42rpx auto 0;
}


.block-header {
  height: 190rpx;
  display: flex;
}

.block-header-img {
  width: 160rpx;
  height: 190rpx;
  border-radius: 16rpx;
  background-color: lawngreen;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.block-header-info {
  padding-top: 8rpx;
  flex: 1;
}


.info-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #222222;
  margin-bottom: 36rpx;
}

.info-num-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666666;
}

.info-progress {
  height: 24rpx;
  background: #F4F4F4;
  margin-top: 16rpx;
}


.block-bd {
  width: 614rpx;
  height: 480rpx;
  background: #F8F8F8;
  border-radius: 16rpx;
  margin: 32rpx auto 0;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.block-bd-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #222222;
  padding-top: 32rpx;
}

.block-bd-items {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 46rpx;
  padding-bottom: 38rpx;
  border-bottom: 2rpx dashed #E6E6E6;
}

.block-bd-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.block-bd-item-icon {
  width: 28rpx;
  height: 32rpx;
  background: red;
  margin-right: 12rpx;
}

.block-bd-item-text {
  font-size: 28rpx;
  color: #999;
}

.block-bd-item-num {
  font-size: 44rpx;
  font-weight: 600;
  color: #222222;
  margin-top: 12rpx;
}

.block-hd-tips {
  font-size: 28rpx;
  color: #999;
  margin: 30rpx auto 24rpx;
  text-align: center;
}

.block-hd-btn {
  width: 334rpx;
  height: 84rpx;
  background: linear-gradient(90deg, #FF8254 0%, #FF333B 100%);
  border-radius: 46rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #FFF;
  margin: 0 auto;
}

.list-wrap-title {
  font-size: 28rpx;
  color: #222222;
  padding: 40rpx 28rpx 0;
}

.lists {
  padding-top: 10rpx;
}

.list {
  width: 724rpx;
  height: 252rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  margin: 0 auto;
  display: flex;
  padding: 0 54rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.list-bg-1 {
  background-image: url(http://zhuoyou-shop.oss-cn-hangzhou.aliyuncs.com/cck/list_bg_1.png);
}

.list-bg-2 {
  background-image: url(http://zhuoyou-shop.oss-cn-hangzhou.aliyuncs.com/cck/list_bg_2.png);
}

.list-bg-3 {
  background-image: url(http://zhuoyou-shop.oss-cn-hangzhou.aliyuncs.com/cck/list_bg_3.png);
}

.list-info {
  width: 360rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.title-wrap {
  font-size: 28rpx;
  color: #999999;
  display: flex;
  align-items: center;
}

.title-name {
  font-size: 36rpx;
  color: #222;
  margin-right: 12rpx;
}

.list-desc {
  font-size: 30rpx;
  color: #666;
  margin-top: 8rpx;
}

.list-btn {
  width: 180rpx;
  height: 64rpx;
  background: linear-gradient(90deg, #FF8254 0%, #FF333B 100%);
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.list-btn-img {
  width: 120rpx;
  height: 30rpx;
  background-image: url(http://zhuoyou-shop.oss-cn-hangzhou.aliyuncs.com/cck/text_list_1.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
