page {
  background: #fff;
  padding-bottom: 200rpx;
  --popup-round-border-radius: 16rpx;
}

.header {
  width: 100%;
  height: 340rpx;
  background-image: url(http://zhuoyou-shop.oss-cn-hangzhou.aliyuncs.com/cck/ranklist_bg.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
  position: revert;
}

.header-tips {
  width: 314rpx;
  height: 174rpx;
  background-image: url(http://zhuoyou-shop.oss-cn-hangzhou.aliyuncs.com/cck/ranklist_tips.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
  position: absolute;
  top: 34rpx;
  left: 20rpx;
}

.header-rule {
  font-size: 24rpx;
  color: #FFFFFF;
  position: absolute;
  top: 20px;
  right: 28rpx;
}

.rank-wrap {
  width: 750rpx;
  background: #FFFFFF;
  border-radius: 36rpx 36rpx 0 0;
  margin-top: -40rpx;
}

.rank-wrap-header {
  height: 40rpx;
  border-radius: 36rpx 36rpx 0 0;
}

/*list*/
.lists {
  padding: 0 40rpx;
  box-sizing: border-box;
  margin-top: -40rpx;
}

.list-hd {
  height: 88rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #999999;
}

.rank {
  width: 72rpx;
}

.w256 {
  width: 256rpx;
}

.w238 {
  width: 238rpx;
}

.w400 {
  width: 360rpx;
}

.user {
  margin-left: 50rpx;
}

.total {
  width: 112rpx;
  margin-left: 50rpx;
}

.list-name {
  width: 193rpx;
  margin: 0 0 0 10rpx;
}

.right-num {
  width: 84rpx;
  margin-left: auto;
  text-align: right;
}

.list {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
}

.list-wrap {

}

.fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  box-sizing: border-box;
  background: #FFFFFF;
  box-shadow: 0 -2rpx 14rpx 0 rgba(172, 125, 66, 0.15);
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.rank-bd {
  text-align: center;
  font-size: 32rpx;
  font-family: Barlow-BoldItalic, Barlow;
  color: #666666;
}

.user-bd {
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  background: #C1C1C1;
  border: 2rpx solid #FFD233;
  box-sizing: border-box;
  border-radius: 100%;
  flex-shrink: 0;
  margin-right: 16rpx;
}

.name {
  font-size: 28rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-name-bd {
  width: 193rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  color: #333333;
}

.total-bd {
  font-size: 36rpx;
  color: #999999;
  font-family: Barlow-BoldItalic, Barlow;
}

.right-num-bd {
  font-size: 36rpx;
  font-family: Barlow-BoldItalic, Barlow;
  color: #1AC97C;
  text-align: right;
}

/*list=======*/


/*rule-wrap*/
.rule-wrap {
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 48rpx;
  box-sizing: border-box;
}

.rule-close {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: 20rpx;
  right: 24rpx;
  background-image: url(http://zhuoyou-shop.oss-cn-hangzhou.aliyuncs.com/cck/rule_close.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.rule-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #222222;
  text-align: center;
  margin-bottom: 32rpx;
}

.rule-list {
  display: flex;
  align-items: flex-start;
  margin-top: 10rpx;
}

.rule-list-icon {
  width: 8rpx;
  height: 8rpx;
  background: #FD6848;
  margin-right: 16rpx;
  flex-shrink: 0;
  margin-top: 12rpx;
}

.rule-list-text {
  font-size: 30rpx;
  line-height: 44rpx;
  color: #222222;
}

.rule-btn {
  width: 224rpx;
  height: 76rpx;
  background: linear-gradient(90deg, #FF8254 0%, #FF333B 100%);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #FFF;
  margin: 32rpx auto 0;
}

/*rule-wrap===============*/
