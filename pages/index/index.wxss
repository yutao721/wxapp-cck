.wrap {
  background: #FFFFFF;
  padding-bottom: 200rpx;
}

/*banner*/
.swiper, .swiper-item {
  height: 360rpx;
}

.swiper-img {
  height: 100%;
  width: 100%;
  display: block;
}

.swiper .wx-swiper-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 100%;
}


.swiper .wx-swiper-dot-active::before {
  width: 10rpx !important;
  height: 10rpx !important;
  background: #FFFFFF !important;
}

/*tabs*/
.tabs {
  background: #FFF;
  height: 128rpx;
  display: flex;
  align-items: center;
}

.tabs-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #222;
}

.tabs-item.active {
  font-size: 32rpx;
  color: #222;
  font-weight: bold;
  position: relative;
}

.tabs-item.active:after {
  position: absolute;
  content: '';
  display: block;
  width: 32rpx;
  height: 6rpx;
  background: #E90012;
  border-radius: 3rpx;
  left: 50%;
  transform: translateX(-50%);
  bottom: -6rpx;
}

/*tabs=========*/


/*lists*/
.list {
  display: flex;
  align-items: center;
  height: 160rpx;
  padding: 32rpx 0;
  margin: 0 28rpx;
  border-top: 1rpx solid #EAEAEA;
}

.list:first-of-type {
  border: none;
}

.list-title {
  font-size: 32rpx;
  color: #222222;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.list-sub {
  font-size: 26rpx;
  color: #999999;
  margin-top: 32rpx;
}

.list-img {
  width: 240rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background-color: red;
  flex: 240rpx 0 0;
  margin-left: 38rpx;
}

/*lists=========*/
