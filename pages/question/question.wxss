page {
  background: #FFF;
  padding-bottom: 200rpx;
}

.header {
  width: 694rpx;
  height: 440rpx;
  background-color: #FF3D17;
  margin: 16rpx auto;
  border-radius: 16rpx;
}

.nav-items {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 0 28rpx;
}

.nav-item {
  width: 218rpx;
  height: 92rpx;
  background: #FFFFFF;
  box-shadow: 0 4rpx 16rpx 0 rgba(82, 82, 82, 0.08);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.nav-item-icon {
  width: 44rpx;
  height: 44rpx;
  background-color: red;
  margin-right: 14rpx;
}

.nav-item-text {
  font-size: 28rpx;
  color: #222222;
}

.dropdown-wrap {
}

.list {
  display: flex;
  margin-top: 24rpx;
  padding: 0 28rpx;
  height: 190rpx;
}

.list-img {
  width: 190rpx;
  height: 190rpx;
  background: #FCA0A0;
  border-radius: 16rpx;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.list-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.list-sub {
  display: flex;
  justify-content: space-between;
}

.list-total {
  font-size: 26rpx;
  color: #999999;
}

.list-tag {
  width: 64rpx;
  height: 40rpx;
  background: #F2F2F2;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #AAAAAA;
}
