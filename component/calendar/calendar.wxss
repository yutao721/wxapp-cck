.bottom-toggle {
  width: 24rpx;
  height: 24rpx;
  background-image: url(http://zhuoyou-shop.oss-cn-hangzhou.aliyuncs.com/cck/icon_arrow_down.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
  margin: 10rpx auto 0;
  transition: all .3;
  position: absolute;
  bottom: 14rpx;
  left: 50%;
  transform: translateX(-50%);
}

.bottom-toggle.up {
  transform: rotate(180deg);
}

