
.calendar {
  width: 100%;
  height: 440rpx;
  font-size: 28rpx;
  background: linear-gradient(90deg, #FF653B 0%, #FF1800 100%);
  box-shadow: 0 2rpx 20rpx 0 rgba(151, 151, 151, 0.18);
  box-sizing: border-box;
  position: relative;
  padding: 0 0 0 32rpx;
  border-radius: 16rpx;
  z-index: 100;
  color: #FFFFFF;
}

.calendar:after {
  display: block;
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 440rpx;
  background-image: url(http://zhuoyou-shop.oss-cn-hangzhou.aliyuncs.com/cck/calendar_bg.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
  z-index: -1;
}

.calendar.more {
  height: 902rpx;
}

.header-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #FFFFFF;
  padding: 32rpx 32rpx 0 0;
}

.header-title-tips {
  font-size: 32rpx;
  font-weight: 500;
}

.header-sign {
  font-size: 26rpx;
  margin: 12rpx 0;
}

.header-bar {
  width: 630rpx;
  height: 64rpx;
  border-radius: 36rpx;
  background: rgba(255, 255, 255, .2);
  margin: 14rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.header-bar-icon {
  width: 22rpx;
  height: 26rpx;
  background-image: url(http://zhuoyou-shop.oss-cn-hangzhou.aliyuncs.com/cck/icon_calendar_arrow_right.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.header-bar-icon.left {
  transform: rotate(180deg);
}

/* 星期头部 */
.week-container {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #ffffff;
  height: 68rpx;
}

.week-container .week-item {
  width: 68rpx;
  height: 68rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 26rpx;
}

